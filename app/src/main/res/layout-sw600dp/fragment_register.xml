<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorPrimaryDark">

    <EditText
        android:id="@+id/firstNameTxt"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="228dp"
        android:background="@drawable/my_edit_text"
        android:hint="First name"
        android:textAlignment="center"
        android:textColorHint="#d9d9d9"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/lastNameTxt"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/my_edit_text"
        android:hint="Last name"
        android:textAlignment="center"
        android:textColorHint="#d9d9d9"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.722"
        app:layout_constraintStart_toEndOf="@+id/firstNameTxt"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/passwordTxt"
        android:layout_width="375dp"
        android:layout_height="55dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/my_edit_text"
        android:hint="Password"
        android:textAlignment="center"
        android:textColorHint="#d9d9d9"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="390dp" />

    <EditText
        android:id="@+id/confirmTxt"
        android:layout_width="375dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/my_edit_text"
        android:hint="Confirm password"
        android:textAlignment="center"
        android:textColorHint="#d9d9d9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordTxt" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="309dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/my_button"
        android:backgroundTint="@color/buttonOrange"
        android:fontFamily="sans-serif-condensed"
        android:text="Get Started"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmTxt"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/emailTxt"
        android:layout_width="375dp"
        android:layout_height="55dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/my_edit_text"
        android:hint="Email"
        android:textAlignment="center"
        android:textColorHint="#d9d9d9"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="315dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-condensed-light"

        android:text="join with your email"
        android:textAllCaps="true"
        android:textColor="#DEEBDC "
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.121" />

</android.support.constraint.ConstraintLayout>